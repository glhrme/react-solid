{
  "env": {
    "browser": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "linebreak-style": 0,
    "semicolon": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "semi": [
      2,
      "never"
    ],
    "max-len": [
      "error",
      100
    ],
    "@typescript-eslint/consistent-type-definitions": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".ts",
          ".tsx"
        ]
      }
    ],
    "import/extensions": [
      2,
      "never",
      {
        "css": "always",
        "svg": "always",
        "woff": "always",
        "eot": "always",
        "ttf": "always",
        "otf": "always",
        "woff2": "always",
        "theme": "always",
        "style": "always",
        "png": "always"
      }
    ],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": [
      "error"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts",
          ".tsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}